export const postRouter = {
  all: publicProcedure
    .input(z.string())
    .query(({ input}) => {
    return { id: 1, title: input };
  }),
  private: protectedProcedure
    .input(z.string())
    .query(({ input}) => {
      return { id: 1, title: input };
