const ITEM_WIDTH = width * 0.9;
const ITEM_HEIGHT = height * 0.65;
const SPACING = 15;

const getStyleById = (id: string | undefined) => {
  return STYLES.find(style => style.id === id) ?? STYLES[0];
};

