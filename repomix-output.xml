  title = 'Leaderboard',
  players,
  loading = false,
  maxPlayersToShow = 10,
  selectedPeriod = 'weekly',
  onPeriodChange,
  onPlayerPress,
  showRankChange = false,
  highlightTopThree = true,
  showDetails = false,
  statToShow = 'score',
  themeStyle,
  style,
}) => {
